@model Product

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Title" disabled type="text" class="form-control border-0 shadow" />
            <label asp-for="Title" class="ms-2">Product Name</label>

           
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Description" disabled type="text" class="form-control border-0 shadow" />
            <label asp-for="Description" class="ms-2">Product Description</label>
            
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="ListPrice" disabled type="text" class="form-control border-0 shadow" />
            <label asp-for="ListPrice" class="ms-2">Product ListPrice</label>
            
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="ISBN" disabled type="text" class="form-control border-0 shadow" />
            <label asp-for="ISBN" class="ms-2">Product DisplayOrder</label>
           
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Author" disabled type="text" class="form-control border-0 shadow" />
            <label asp-for="Author" class="ms-2">Product Author</label>
           
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Price" disabled type="text" class="form-control border-0 shadow" />
            <label asp-for="Price" class="ms-2">Product Price</label>
            
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Price50" disabled type="text" class="form-control border-0 shadow" />
            <label asp-for="Price50" class="ms-2">Product Price50</label>
            
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Price100" disabled type="text" class="form-control border-0 shadow" />
            <label asp-for="Price100" class="ms-2">Product Price100</label>
           
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">  <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">Back</a></div>
        </div>


    </div>
</form>

