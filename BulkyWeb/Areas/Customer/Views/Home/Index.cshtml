@model IEnumerable<Product>

<div class="container my-5">
    <h1 class="mb-4">Product List</h1>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Title">
                    <div class="card-body text-center">
                        <h5 class="card-title">@product.Title</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text"><strong>ListPrice:</strong> @product.Price</p>
                        <p class="card-text"><strong>Last Price:</strong> @product.ListPrice</p>
                      @*   <a href="@Url.Action("Details", "Home", new { id = product.ProductId })" class="btn btn-primary">View Details</a> *@
                          <a asp-action="Details" asp-route-productId="@product.ProductId" class="btn btn-primary">View Details</a> 
                    </div>
                </div>
            </div>
        }
    </div>
</div>
